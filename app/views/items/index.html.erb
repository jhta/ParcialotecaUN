<h1>Listing items</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Tipo</th>
      <th>Descripcion</th>
      <th>Fecha</th>
      <th>Peso</th>
      <th>Formato</th>
      <th>Id materia</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.nombre %></td>
        <td><%= item.tipo %></td>
        <td><%= item.descripcion %></td>
        <td><%= item.fecha %></td>
        <td><%= item.peso %></td>
        <td><%= item.formato %></td>
        <td><%= item.id_materia %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

